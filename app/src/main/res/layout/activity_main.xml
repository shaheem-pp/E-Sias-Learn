<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <RelativeLayout
        android:id="@+id/slidebartop"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_alignParentTop="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:background="@color/maincolor"

            >


        </FrameLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-5dp" />

        <ImageView
            android:id="@+id/drawer_icon"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/newlogo" />

        <LinearLayout
            android:id="@+id/dotslayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/slidebartop"
        android:background="@drawable/gradientbot" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/slidebartop"
        android:background="@color/maincolor"
        android:gravity="center">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/online_class"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonpublicwindow">

                        <ImageView
                            android:id="@+id/bookpng"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/onlineclass"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bookpng"
                            android:layout_margin="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/online_class"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/magazine"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpublicwindow"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="@drawable/buttonpublicwindow"


                        >

                        <ImageView
                            android:id="@+id/notesonepng"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_baseline_menu_book_24"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/notesonepng"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/magazine"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notification"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonpublicwindow">

                        <ImageView
                            android:id="@+id/notespng"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/notificationbell"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/notespng"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="@string/notification"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform"

                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/syllabus"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="@drawable/buttonpublicwindow"

                        >

                        <ImageView
                            android:id="@+id/classroom"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/books"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/classroom"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="@string/syllabus"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/question_papers"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="@drawable/buttonpublicwindow"


                        >

                        <ImageView
                            android:id="@+id/collegepng"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/notes"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/collegepng"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="@string/question_papers"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notes"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonpublicwindow"

                        >

                        <ImageView
                            android:id="@+id/resultpng"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_baseline_book_24"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/resultpng"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/notes"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform"

                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/college_website"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="@drawable/buttonpublicwindow"

                        >

                        <ImageView
                            android:id="@+id/notificationpng"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/collegepng"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/notificationpng"
                            android:layout_margin="5dp"

                            android:gravity="center"
                            android:text="@string/college_website"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/examresult"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonpublicwindow"

                        >

                        <ImageView
                            android:id="@+id/aboutpng"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/resulticon"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/aboutpng"
                            android:layout_margin="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="@string/exam_results"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ourteams"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buttonpublicwindow">

                        <ImageView
                            android:id="@+id/ourteam"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/teamicon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ourteam"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="Our Team"
                            android:textColor="#00832F"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>